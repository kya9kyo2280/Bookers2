<h1>Books</h1>

  <div class="form-group has-icon">
   <div class="user-profile-image">
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
   </div>

  </div>


  <div class="col-md-8">
  <p class="orange b">Name</p>
  <p><%= @user.name %></p>
  <p class="orange b">Intoroduction</p>
  <p><%= @user.introduction %></p>
  </div>
</div>
    <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th> Title</th>
      <th> Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>


    </tr>
    <% end %>
  </tbody>

</table>
