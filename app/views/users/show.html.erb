<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th> Title</th>
      <th> Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </tbody>
    <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>
</table>
