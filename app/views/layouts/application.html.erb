<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Bookers</title>
  </head>

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-inverse" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <a class="navbar-brand" style="color:white;font-size: 20px;
    padding-top: 5px;">Bookers</a>
          </div>
          <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" >


    <% if user_signed_in? %>

      <li class=""style="color:white; padding-left: 5px;">
        <%= link_to user_path(current_user.id)  do%>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
        <%end%>
     </li>

     <li class=""style="color:white; padding-left: 5px;">
        <%= link_to users_path do%>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
        <%end%>
     </li>


      <li class=""style="color:white; padding-left: 5px;">
        <%= link_to books_path  do%>
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
        <%end%>
      </li>

      <li class=""style="color:white; padding-left: 5px;">
        <%= link_to destroy_user_session_path, method: :delete do%>
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout
        <%end%>
      </li>

    <% else %>

      <li class=""style="color:white; padding-left: 5px ;">
        <%= link_to root_path  do%>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
        <%end%>
      </li>

      <li class=""style="color:white; padding-left: 5px;">
        <%= link_to home_about_path  do%>
        <span class="glyphicon glyphicon-link" aria-hidden="true"></span> About
        <%end%>
      </li>

      <li class=""style="color:white; padding-left: 5px;">
        <%= link_to new_user_registration_path  do%>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Sign up
        <%end%>
      </li>

      <li class=""style="color:white; padding-left: 5px;">
        <%= link_to new_user_session_path  do%>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Log in
        <%end%>
      </li>

   <% end %>

 </div>

  </ul>
</div>
        </div>
        </div>
      </nav>
    </div>


    <%= flash[:notice]%>
    <%= yield %>

    <div class="clearfix">
    <div class="col-sm-3 col-md-2 sidebar">

　　</div>
    </div>

   <footer>
      <p class="text-right" style=" padding-right: 20%;">
      CopyRight Infratop.inc
      </p>
    </footer>

  </body>
</html>
