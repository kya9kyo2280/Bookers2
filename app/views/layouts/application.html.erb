<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
  </head>

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-inverse" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Bookers</a>
          </div>
          <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>

      <li class="">
        <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'Home', user_path(current_user.id) %></span>

      <li class="">
        <span class="glyphicon glyphicon-user" aria-hidden="true">
        <%= link_to 'Users', users_path %></span>

      <li class="">
        <span class="glyphicon glyphicon-book" aria-hidden="true">
        <%= link_to 'Books', books_path %></span>
      </li>

      <li class="">
        <span class="glyphicon glyphicon-log-out" aria-hidden="true">
        <%= link_to "logout", destroy_user_session_path, method: :delete %></span>
      </li>


    <% else %>

      <li class="">
        <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'Home', top_path %></span>

      <li class="">
        <span class="glyphicon glyphicon-link" aria-hidden="true">
        <%= link_to 'About', home_about_path %></span>

      <li class="">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        <%= link_to "sign up", new_user_registration_path %></span>
      </li>

      <li class="">
        <span class="glyphicon glyphicon-log-in" aria-hidden="true">
        <%= link_to "log in", new_user_session_path %></span>
      </li>

   <% end %>

  </ul>
</div>
        </div>
        </div>
      </nav>
    </div>
    <%= flash[:notice]%>
    <%= yield %>

    <div class="clearfix">
    <div class="col-sm-3 col-md-2 sidebar">

　　</div>
    </div>

   <footer>
      <p class="text-right">
      CopyRight Infratop.inc
      </p>
    </footer>

  </body>
</html>
